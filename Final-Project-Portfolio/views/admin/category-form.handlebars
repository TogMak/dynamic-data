{{!-- views/admin/category-form.handlebars --}}
<section class="max-w-xl mx-auto mt-12 bg-white/80 backdrop-blur-lg shadow-2xl rounded-2xl overflow-hidden relative animate-fade-in-up">
  <!-- Decorative gradient bar -->
  <div class="h-2 bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500"></div>

  <div class="p-8">
    <h1 class="text-3xl font-extrabold text-gray-800 mb-6 flex items-center gap-2 animate-fade-in-down">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
      {{#if cat}}Edit Category{{else}}New Category{{/if}}
    </h1>

    <form method="POST" action="{{#if cat}}/admin/categories/{{cat.id}}?_method=PUT{{else}}/admin/categories{{/if}}" class="space-y-6">
      <!-- Name field -->
      <div class="animate-fade-in-up [animation-delay:.2s]">
        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Category Name</label>
        <input type="text" id="name" name="name" value="{{#if cat}}{{cat.name}}{{/if}}" required
               class="block w-full rounded-lg border border-gray-300 px-4 py-2 text-gray-800 shadow focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500" />
      </div>

      <div class="flex justify-end gap-3 pt-4 animate-fade-in-up [animation-delay:.4s]">
        <a href="/admin" class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gray-200 text-gray-700 hover:bg-gray-300 transition">
          Cancel
        </a>
        <button type="submit" class="inline-flex items-center gap-2 px-6 py-2 rounded-full bg-indigo-600 text-white shadow hover:bg-indigo-500 transition">
          {{#if cat}}Update{{else}}Create{{/if}}
        </button>
      </div>
    </form>
  </div>
</section>

<!-- keyframes reused from dashboard (ensure loaded once in layout) -->
<style>
  @keyframes fade-in-down { from {opacity:0; transform:translateY(-10px)} to {opacity:1; transform:none} }
  @keyframes fade-in-up   { from {opacity:0; transform:translateY(10px)}  to {opacity:1; transform:none} }
  .animate-fade-in-down { animation: fade-in-down .8s both; }
  .animate-fade-in-up   { animation: fade-in-up   .8s .2s both; }
</style>