<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 text-gray-800 font-sans antialiased h-screen flex flex-col">
    <!-- ░░░ NAVBAR ░░░ -->
    <header class="sticky top-0 z-40 bg-white shadow">
      <div
        class="max-w-6xl mx-auto flex items-center justify-between h-16 px-4 sm:px-6 lg:px-8"
      >
        <!-- Brand -->
        <a
          href="/"
          class="text-2xl font-bold tracking-tight text-indigo-600 hover:text-indigo-500"
        >PhotoPortfolio</a>

        <!-- DesktopMenu -->
        <nav class="hidden md:flex items-center gap-8 text-sm font-medium">
          <a href="/" class="hover:text-indigo-600 transition">Home</a>

          <!-- Categories dropdown -->
          <div class="relative group">
            <button
              class="flex items-center gap-1 text-sm font-medium hover:text-indigo-600 transition"
            >
              Categories
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 mt-[1px]"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M19 9l-7 7-7-7" />
              </svg>
            </button>

            <!-- Menu -->
            <div
              class="absolute left-0 py-3 w-48 bg-white border rounded-lg shadow-lg opacity-0 translate-y-1 group-hover:opacity-100 group-hover:translate-y-0 invisible group-hover:visible transition duration-200 ease-out"
            >

              {{#if navCats.length}}
                {{#each navCats}}
                  <a
                    href="/categories/{{this.id}}"
                    class="relative hover:underline block px-4 py-2 text-sm text-gray-700 overflow-hidden transition-all duration-200"
                  >

                    <!-- animated highlight bar -->
                    <span
                      class="absolute inset-y-0 left-0 w-1 bg-indigo-500 scale-y-0 group-hover/link:scale-y-100 origin-top transition-transform duration-200"
                    ></span>

                    <!-- label -->
                    <span
                      class="relative pl-1 group-hover:pl-3 group-hover/text:pl-3 group-hover:text-indigo-600 transition-all duration-200"
                    >
                      {{this.name}}
                    </span>
                  </a>
                {{/each}}
              {{else}}
                <span class="block px-4 py-3 text-xs text-gray-500 italic">
                  If you are the admin, add a category
                </span>
              {{/if}}
            </div>
          </div>

          <a
            href="/admin"
            class="hover:text-indigo-600 transition"
          >Dashboard</a>
        </nav>

        <!-- Mobile button -->
        <button
          id="nav-toggle"
          class="md:hidden w-10 h-10 flex items-center justify-center rounded-md hover:bg-gray-100"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-gray-700"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            /></svg>
        </button>
      </div>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="md:hidden hidden border-t">
        <a href="/" class="block px-4 py-3 text-sm hover:bg-indigo-50">Home</a>
        <details>
          <summary
            class="px-4 py-3 text-sm cursor-pointer hover:bg-indigo-50"
          >Categories</summary>
          <div class="pl-4 pb-2">
            {{#if navCats.length}}
              {{#each navCats}}
                <a
                  href="/categories/{{this.id}}"
                  class="block px-4 py-2 text-sm hover:bg-indigo-50"
                >{{this.name}}</a>
              {{/each}}
            {{else}}
              <span class="block px-4 py-2 text-xs text-gray-500 italic">If you
                are the admin, add a category</span>
            {{/if}}
          </div>
        </details>
        <a
          href="/admin"
          class="block px-4 py-3 text-sm hover:bg-indigo-50"
        >Dashboard</a>
      </div>
    </header>

    <!-- ░░░ PAGE CONTENT ░░░ -->
    <main class="overflow-clip">{{{body}}}</main>

    <!-- ░░░ FOOTER ░░░ -->
    <footer class="bg-white border-t mt-20">
      <div
        class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6 flex flex-col sm:flex-row sm:justify-between items-center gap-3 text-sm text-gray-500"
      >
        <p>&copy; {{year}} PhotoPortfolio by Togan Makzume</p>
        <p>Built with
          <a
            href="https://expressjs.com/"
            class="text-indigo-600 hover:text-indigo-500"
          >Express</a>
          &amp;
          <a
            href="https://handlebarsjs.com/"
            class="text-indigo-600 hover:text-indigo-500"
          >Handlebars</a>.</p>
      </div>
    </footer>

    <script>
      document.getElementById('nav-toggle').addEventListener('click', () => {
      document.getElementById('mobile-menu').classList.toggle('hidden'); });
    </script>
  </body>
</html>